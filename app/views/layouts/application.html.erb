<!DOCTYPE html>
<html>
<head>
  <title>Puffly</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <%= yield %>
  <% flash.each do |type, msg| %>
    <%= content_tag :span, msg, class: "#{type}", id: "puffly" %>
  <% end %>
</body>
</html>
